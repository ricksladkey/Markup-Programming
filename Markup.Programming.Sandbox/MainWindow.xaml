<Window
    x:Class="Markup.Programming.Sandbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="http://programmability.codeplex.com/markup/programming"
    Height="300" Width="300">
    <Grid>
        <UniformGrid Rows="3">
            <Rectangle Fill="Red">

                <!-- Shortest form -->

                <p:Attached.Operations>
                    <p:CallHandler Path="MouseLeftButtonDown.[MessageBox].Show('Hello, world!')"/>
                </p:Attached.Operations>

            </Rectangle>
            <Rectangle Fill="Green">

                <!-- Shorter form -->
                
                <p:Attached.Operations>
                    <p:CallHandler Path="MouseLeftButtonDown.[MessageBox].Show" Parameter="Hello, world!"/>
                </p:Attached.Operations>
                
            </Rectangle>
            <Rectangle Fill="Blue">
                
                <!-- Standard way -->

                <p:Attached.Operations>
                    <p:EventHandler Path="MouseLeftButtonDown">
                        <p:Call Path="[MessageBox].Show">
                            <p:Val Value="Hello, world!"/>
                        </p:Call>
                    </p:EventHandler>
                </p:Attached.Operations>
                
            </Rectangle>
        </UniformGrid>
    </Grid>
</Window>

        <p:Attached.Operations>
            <p:EventHandler Path="Loaded">
                <p:Script>
                    var $message = 'Clicked!';
                </p:Script>
                <p:ScriptHandler>
                    @FindElement('Button').Click => [MessageBox].Show($message);
                </p:ScriptHandler>
            </p:EventHandler>
        </p:Attached.Operations>
        <Button Name="Button" Content="Click Me!"/>
    </Grid>
</Window>

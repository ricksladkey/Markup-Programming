<UserControl
    x:Class="Markup.Programming.Samples.SelectOnFocus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="http://programmability.codeplex.com/markup/programming"
    Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Text="Normal TextBox"/>
            <TextBox Text="SelectOnFocus TextBox">
                <p:Attach.Operations>
                    <p:CallHandler Path="PreviewGotKeyboardFocus!$AssociatedObject.SelectAll"/>
                </p:Attach.Operations>
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl
    x:Class="Markup.Programming.Samples.SelectOnFocus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:p="http://programmability.codeplex.com/"
    Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Text="Normal TextBox"/>
            <TextBox Text="SelectOnFocus TextBox">
                <i:Interaction.Triggers>
                    <p:CallHandler Path="PreviewGotKeyboardFocus!$AssociatedObject.SelectAll"/>
                </i:Interaction.Triggers>
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
